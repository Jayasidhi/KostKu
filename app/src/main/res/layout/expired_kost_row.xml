    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SecondaryColor"
        android:paddingTop="4dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/nama_penghuni_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : "
                android:textSize="18dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_nama_penghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/nama_penghuni_txt"/>

            <TextView
                android:id="@+id/notelp_penghuni_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon : "
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/nama_penghuni_txt"/>

            <TextView
                android:id="@+id/tv_notelp_penghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/tv_nama_penghuni"
                android:layout_toRightOf="@+id/notelp_penghuni_txt"/>

            <TextView
                android:id="@+id/kamar_penghuni_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Kamar : "
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/notelp_penghuni_txt"/>

            <TextView
                android:id="@+id/tv_kamar_penghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/tv_notelp_penghuni"
                android:layout_toRightOf="@+id/kamar_penghuni_txt"/>

            <TextView
                android:id="@+id/checkin_penghuni_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Masuk : "
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/kamar_penghuni_txt"/>

            <TextView
                android:id="@+id/tv_checkin_penghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/tv_kamar_penghuni"
                android:layout_toRightOf="@+id/checkin_penghuni_txt"/>

            <TextView
                android:id="@+id/checkout_penghuni_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Keluar : "
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/checkin_penghuni_txt"/>

            <TextView
                android:id="@+id/tv_checkout_penghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:textSize="18dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/tv_checkin_penghuni"
                android:layout_toRightOf="@+id/checkout_penghuni_txt"/>

        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_below="@id/layout1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        </RelativeLayout>




</LinearLayout>